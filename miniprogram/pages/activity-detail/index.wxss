/* pages/activity-detail/index.wxss */

page {
  background-color: #f8f9fa;
}

.container {
  padding: 0;
  background-color: #f8f9fa;
  padding-bottom: 120rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: #999;
  font-size: 28rpx;
}

/* 活动图片 */
.activity-images {
  width: 100%;
  height: 400rpx;
  position: relative;
}

.image-swiper {
  width: 100%;
  height: 100%;
}

.activity-image {
  width: 100%;
  height: 100%;
}

/* 活动基本信息 */
.activity-info {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.activity-title {
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-right: 20rpx;
}

.activity-status {
  flex-shrink: 0;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.activity-status.ongoing {
  background: #4A90E2;
  color: white;
}

.activity-status.ended {
  background: #f8f9fa;
  color: #6c757d;
}

.activity-status.upcoming {
  background: #fff3cd;
  color: #856404;
}

.activity-meta {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-icon {
  font-size: 28rpx;
  margin-right: 15rpx;
}

.meta-text {
  font-size: 28rpx;
  color: #666;
}

/* 活动章节 */
.activity-section {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-left: 6rpx solid #4A90E2;
  padding-left: 20rpx;
}

.activity-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 详情列表 */
.detail-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.detail-item {
  display: flex;
  align-items: flex-start;
}

.detail-label {
  flex-shrink: 0;
  width: 160rpx;
  font-size: 28rpx;
  color: #999;
}

.detail-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 联系方式 */
.contact-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.contact-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.contact-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.contact-action {
  padding: 8rpx 16rpx;
  background: #4A90E2;
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 分享功能 */
.share-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.share-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  border-radius: 12rpx;
  color: white;
  transition: all 0.3s ease;
}

.share-item:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.share-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.share-text {
  font-size: 28rpx;
  font-weight: 500;
}

.share-tips {
  padding: 15rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border-left: 4rpx solid #4A90E2;
}

.share-tips text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 报名状态 */
.registration-status {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.status-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.status-text {
  font-size: 28rpx;
  color: #4A90E2;
  font-weight: 500;
}

.status-time {
  font-size: 24rpx;
  color: #999;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #e9ecef;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.register-btn, .cancel-btn, .disabled-btn {
  width: 100%;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
}

.register-btn {
  background: #4A90E2;
  color: white;
}

.cancel-btn {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.disabled-btn {
  background: #f8f9fa;
  color: #999;
}