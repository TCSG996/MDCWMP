.container {
  padding: 12px
}

.list {
  width: 90%;
}

.item {
  
  position: relative;
  background: #fff;
  border-radius: 8px;
  padding: 12px 12px 8px 12px;
  margin-bottom: 10px
}

.title {
  font-size: 16px;
  color: #333;
  font-weight: 600;
  margin-bottom: 6px
}

.content {
  font-size: 14px;
  color: #666
}

.meta {
  font-size: 12px;
  color: #999;
  margin-top: 8px
}

.badge {
  position: absolute;
  right: 12px;
  top: 12px;
  background: #FF6B35;
  color: #fff;
  font-size: 12px;
  border-radius: 10px;
  padding: 2px 6px
}

.footer {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 12px
}

.btn {
  background: #4A90E2;
  color: #fff;
  border: none;
  border-radius: 6px;
  padding: 8px 16px
}

.loading {
  color: #999
}

.empty {
  color: #999;
  text-align: center;
  margin-top: 30px
}