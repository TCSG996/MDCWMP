.container {
  padding: 12px
}

.card {
  width: 90%;
  background: #fff;
  border-radius: 8px;
  padding: 12px
}

.row {
  display: flex;
  align-items: center;
  margin-bottom: 10px
}

.row.column {
  flex-direction: column;
  align-items: flex-start
}

.label {
  width: 90px;
  color: #666
}

.input {
  flex: 1;
  border: 1px solid #eee;
  border-radius: 6px;
  padding: 8px
}

.textarea {
  width: 100%;
  min-height: 100px;
  border: 1px solid #eee;
  border-radius: 6px;
  padding: 8px
}

.picker {
  flex: 1;
  color: #333
}

.images {
  white-space: nowrap
}

.img {
  display: inline-block;
  width: 80px;
  height: 80px;
  border-radius: 8px;
  background: #f5f5f5;
  margin-right: 8px
}

.img.add {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  color: #999;
  border: 1px dashed #ddd
}

.actions {
  margin-top: 12px
}

.primary {
  background: #4A90E2;
  color: #fff
}