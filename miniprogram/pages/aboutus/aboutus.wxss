/* pages/aboutus.wxss */
.container {
  padding: 28rpx;
  background: #F6F6F6;
  min-height: 100vh;
}

.card {
  width: 90%;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.banner {
  background: linear-gradient(135deg, #4A90E2, #7BB7FF);
  color: #fff;
}

.title {
  font-size: 36rpx;
  font-weight: 700
}

.slogan {
  margin-top: 8rpx;
  opacity: .9
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx
}

.intro {
  font-size: 26rpx;
  color: #555;
  line-height: 1.6
}

.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18rpx 0;
  border-bottom: 1px solid #f2f2f2
}

.row:last-child {
  border-bottom: none
}

.label {
  color: #666;
  font-size: 26rpx
}

.value {
  color: #333;
  font-size: 26rpx
}

.value-link {
  color: #4A90E2
}

.center {
  text-align: center
}

.qr {
  width: 360rpx;
  height: 360rpx;
  margin: 8rpx auto;
  border-radius: 12rpx
}

.tip {
  color: #999;
  font-size: 24rpx
}

.actions {
  padding: 0 8rpx
}

.btn {
  background: #4A90E2;
  color: #fff;
  border: none;
  border-radius: 12rpx
}

.dev {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #484848;
  font-size: 24rpx;
  padding: 10px 0px;
  border-bottom: #f2f2f2 1px solid;
}

.dev:last-child{
  border: none;
  padding-bottom: 0 !important;
}

.maindev{
  width: 18px;
  height: 18px;
  margin-left: 5px;
}

.footer {
  color: #999;
  text-align: center;
  font-size: 24rpx;
  margin-top: 8rpx
}
