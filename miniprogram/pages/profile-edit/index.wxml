<view class="container">
	<view class="form-item">
		<text class="label">头像</text>
		<button class="avatar-btn" bindtap="chooseAvatar">
			<image class="avatar" src="{{form.avatar}}" mode="aspectFill" />
		</button>
	</view>
	<view class="form-item">
		<text class="label">真实姓名</text>
		<input class="input" value="{{form.realName}}" bindinput="onInputRealName" placeholder="请输入真实姓名" />
	</view>
	<view class="form-item">
		<text class="label">学号</text>
		<input class="input" value="{{form.studentId}}" bindinput="onInputStudentId" placeholder="请输入学号" />
	</view>
	<view class="form-item">
		<text class="label">姓名</text>
		<input class="input" value="{{form.name}}" bindinput="onInputName" placeholder="请输入昵称/显示名" />
	</view>
	<view class="form-item">
		<text class="label">专业班级</text>
		<input class="input" value="{{form.major}}" bindinput="onInputMajor" placeholder="如：移动应用开发A2402" />
	</view>
	<view class="form-item">
		<text class="label">年级</text>
		<picker mode="selector" range="{{gradeOptions}}" value="{{gradeIndex}}" bindchange="onGradeChange">
			<view class="picker">{{form.grade || gradeOptions[gradeIndex]}}</view>
		</picker>
	</view>
	<view class="form-item">
		<text class="label">手机号</text>
		<input class="input" value="{{form.phone}}" bindinput="onInputPhone" placeholder="请输入手机号" />
	</view>
	<view class="form-item">
		<text class="label">邮箱</text>
		<input class="input" value="{{form.email}}" bindinput="onInputEmail" placeholder="请输入邮箱" />
	</view>
	<button class="save-btn" bindtap="onSave">保存</button>
</view> 