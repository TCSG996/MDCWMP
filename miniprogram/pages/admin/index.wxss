/* pages/admin/index.wxss */
.container {
  padding: 12px
}

.tabs {
  width: 100%;
  display: flex;
  background: #fff;
  border-radius: 8px;
  overflow: hidden;
  margin-bottom: 12px
}

.tab {
  flex: 1;
  text-align: center;
  padding: 10px 0;
  color: #666
}

.tab.active {
  background: #4A90E2;
  color: #fff
}

.toolbar {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 8px
}

.primary {
  background: #4A90E2;
  color: #fff
}

.list {
  width: 100%;
}

.card {
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04)
}

.item {
  background: #fff;
  border-radius: 10px;
  padding: 12px;
  margin-bottom: 12px
}

.row {
  display: flex;
  align-items: center
}

.between {
  justify-content: space-between
}

.title {
  font-size: 16px;
  color: #333;
  font-weight: 600
}

.ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis
}

.badge {
  padding: 2px 8px;
  border-radius: 10px;
  font-size: 12px
}

.badge.ing {
  background: #4A90E2;
  color: #fff
}

.badge.over {
  background: #E0E0E0;
  color: #666
}

.badge.notyet {
  background: #F0F7FF;
  color: #4A90E2
}

.meta {
  color: #999;
  font-size: 12px;
  margin-top: 6px
}

.actions {
  margin-top: 10px;
  display: flex;
  gap: 8px;
  flex-wrap: wrap
}

.danger {
  background: #FF6B35;
  color: #fff
}

.banner-item {
  display: flex;
  gap: 10px
}

.thumb {
  width: 80px;
  height: 60px;
  border-radius: 6px;
  background: #f5f5f5
}

.banner-right {
  flex: 1
}

.id-row {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-top: 4px
}

.copy {
  background: #f0f7ff;
  color: #4A90E2
}

.mono {
  font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace
}